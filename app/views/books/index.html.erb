<div class="container mt-3">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
  <%= image_tag @book.get_image  %>
      <table>
      <tbody>
        <tr>
          <th>name</th>
          <th></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
      </tbody>
      </table>
      <div>
       <%= link_to users_path do %>
       <i class="fa-solid fa-user-gear"></i>
       <% end %>
      </div>
      <h2>New book</h2>
      <%= form_with model:@book,url:'/books',method: :post do |f| %>
      
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <label>Opinion</label>
      <div class="field">
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' ,class:"btn btn-info"%>
        <% end %>
      </div>
    </div>
  </div>
</div>