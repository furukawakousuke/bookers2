<div class="container mt-4 ">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>
       
      <tbody>
        <div class="row ml-3 pt-2 pb-2 border-top border-bottom font-weight-bold">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          </div>
          <div class="row ml-3 pt-2 pb-2 border-bottom font-weight-bold">
          <th>introduction</th>
          <th><%= @user.introduction %></th>
          </div>
        </tr>
      </tbody>
      </table>
      
      <div class="row ml-5 mt-3 mb-4">
        <% if @user == current_user %>
       <%= link_to edit_user_path(@user.id) do %>
       <i class="fa-solid fa-user-gear"></i>
        <% end %>
       <% end %>
      </div>
      <h2>New book</h2>
      <%= form_with model:@book,url:'/books',method: :post do |f| %>
      
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <label>Opinion</label>
      <div class="field">
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' ,class:"btn btn-info"%>
        <% end %>
      </div>
    </div>
  </div>
</div>