<div class="container mt-3">
  <div class="row">
      
   <%= render 'list', nbook: @book_new, book: @book, user: @user %>
   
   
   <div class="col-md-8">
     <h2>Book detail</h2>
     <table class="w-100">
       <thead>
         <tr>
           <th></th>
           <th></th>
           <th></th>
           <th colspan="3"></th>
         </tr>
       </thead>
       
       <tbody class="border-top">
           
         <td><%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(100,100) %>
          <span class="d-block"><%= @user.name  %></span>
          <% end %></td>
         
         <td class="w-50 pl-5"><%= link_to book_path(@book.id) do %>
          <%= @book.title %>
          <% end %></td>
         <td class="w-50  "><%= @book.body %></td>
         <% if @book.user == current_user %>
         <td><%= link_to "Edit",edit_book_path(@book.id) ,class:"btn btn-success btn-sm" %></td>
         <td><%= link_to "destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？" ,class:"btn btn-danger btn-sm"%></td>
       </tbody>
         <% end %>
         
     </table>
   </div>
     
  </div>
</div>
