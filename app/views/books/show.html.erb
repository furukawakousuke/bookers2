<div class="container pt-3">
  <div class="row">
      
   <%= render 'list', book: @book_new %>
   
   
   <div class="col-8">
     <h2>Book detail</h2>
     <table>
       <thead>
         <tr>
           <th></th>
           <th></th>
           <th></th>
           <th colspan="3"></th>
         </tr>
       </thead>
       
       <tbody class="border-top">
         <td><%= link_to image_tag @user.get_profile_image(100,100)%></td>
         <td><%= @book.title %></td>
         <td><%= @book.body %></td>
         <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
         <% if @book.user == current_user %>
         <td><%= link_to "destroy",book_path(@book),method: :delete %></td>
       </tbody>
         <% end %>
         
     </table>
   </div>
     
    
  </div>
</div>