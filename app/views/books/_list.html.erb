   
    
    <div class="col-md-3 ">
      <% if flash[:notice] %>
<div class="mt-0"><%= notice %></div>
      <% end %>
      
      
      <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>
       
      <tbody>
        <div class="row ml-2 pt-3 pb-3 border-top font-weight-bold">
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          </div>
          <div class="row ml-2 mb-3 pt-3 pb-3 border-top font-weight-bold">
          <th>introduction</th>
          <th><%= @user.introduction %></th>
          </div>
        </tr>
      </tbody>
      </table>
      
      <div class="  mt-3 mb-4 col-12" >
        <% if @user == current_user %>
       <%= link_to edit_user_path(@user.id) do %>
       <span class="btn btn-outline-secondary w-100"><i class="fa-solid fa-user-gear "></i></span>
        <% end %>
        
        <% else %>
       <%= link_to users_path do %>
       <span class="btn btn-outline-secondary w-100"><i class="fa-solid fa-user-gear "></i></span>
       <% end %>
       <% end %>
      </div>
      <h2 class="font-weight-20">New book</h2>
      <%= form_with model:book,url:'/books',method: :post do |f| %>
      
      <div class="field mt-3">
        <label>Title</label>
        <%= f.text_field :title,class:"form-control" %>
      </div>
      
      <div class="field mt-3">
        <label>Opinion</label>
        <%= f.text_area :body,class:"form-control" %>
      </div>
      <div class="actions mt-3">
        <%= f.submit 'Create Book',class:"btn btn-success"%>
        <% end %>
      </div>
    </div>
 

  <div class="col-md-1"></div>