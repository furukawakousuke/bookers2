   
     
    
    <div class="col-md-3 ">
      
      
      
      <% if flash[:notice] %>
      <% end %>
      
      
      
      
      
      <h2>User info</h2>
      
      
      
      
 
      
      
       <%= image_tag user.get_profile_image(100,100) %>
       
      <tbody>
        <div class="row ml-2 pt-3 pb-3 border-top font-weight-bold">
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          </div>
          <div class="row ml-2 mb-3 pt-3 pb-3 border-top font-weight-bold">
          <th>introduction</th>
          <th><%= user.introduction %></th>
          </div>
        </tr>
      </tbody>
      </table>
      
      
      
        
 
       
      
      
      <% if current_user %>
      <div class="  mt-3 mb-4 col-12" >
       <%= link_to edit_user_path(current_user.id) do %>
       <span class="btn btn-outline-secondary w-100"><i class="fas fa-user-cog "></i></span>
        <% end %>
        <% else %>
       <%= link_to edit_user_path(other_user) do %>
       <span class="btn btn-outline-secondary w-100"><i class="fas fa-user- cog"></i></span>
       <% end %>
       <% end %>
        
      </div>
      <h2 class="font-weight-20">New book</h2>
      
      
      
      <% if @book.errors.any? %>
 <div id="error">
   <div class="errors-text">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li class="error-message"><%= message %></li>
   <% end %>
 </ul>
 </div>
 
 <% end %>
      
      
      
      
      <%= form_with model:nbook,url:'/books',method: :post do |f| %>
      
      <div class="field mt-2">
        <label class="book_title">Title</label>
        <%= f.text_field:title ,class:"form-control" %>
      </div>
      
      <div class="field mt-2">
        <label>Opinion</label>
        <%= f.text_area:body ,class:"form-control" %>
      </div>
      <div class="actions mt-3">
        <%= f.submit 'Create Book',class:"btn btn-success"%>
     <% end %>
      </div>
    </div>
 