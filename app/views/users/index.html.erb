<div class="container mt-3">
  <div class="row">
    <%= render 'books/list', book: @book, nbook: @book_new  ,user: @user %>
    <div class="col-8">
      <h2>Users</h2>
      <table class="w-100 mt-2 border-top">
        <thead>
        <tr class=" border-top border-bottom font-weight-bold">
          <th class=" pt-3 pb-3 ,ml-5 pl-3">image</th>
          <th class="pt-3 pb-3 pr-5">name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody class="border-top pb-2">
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td class="align-items-start"><%= link_to "Show",user_path(user.id) %></td>
      </tbody>
      <% end %>
      </table>
      
      
      
      
      
      
    </div>
    
    
  </div>
</div>