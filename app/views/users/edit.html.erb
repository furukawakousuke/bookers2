<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0  mx-auto   pt-3">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
      <div id="error">
       <div class="errors-text">
       <h3><%= @user.errors.count %> errors prohibited obj from being saved</h3>
     </div>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
   <li class="error-message"><%= message %></li>
       <% end %>
    </ul>
    </div>
      <% end %>
      
      
      
      
      <%= form_with model:@user do |f| %> 
      <label for="inputUser">Name</label><br>
      <%= f.text_field :name,autofocus:true,id:"inputUser",class:"form-control" %><br>
      <label for="inputUser">Image</label><br>
      <%= f.file_field :profile_image,placeholder:"プロフィール画像",accept:"image/*" ,class:"mb-3"%><br>
      <label for="inputUser"><span class="mt-5">Introduction</span></label><br>
      <%= f.text_area :introduction, autofocus:true, id:"inputUser" ,class:"form-control" %><br>
      <%= f.submit "Update User" ,class:"btn btn-secondary" %><br>
       <% end %>
    </div>
  </div>
</div>